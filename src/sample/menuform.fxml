<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="520.0" prefWidth="730.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.MenuFormController">
   <children>
      <MenuBar layoutY="2.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#exitAction" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" onAction="#helpPressed" text="Help">
            <items>
              <MenuItem fx:id="mnHlpBtb" mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <Label fx:id="userlbl" layoutX="14.0" layoutY="38.0" text="Label">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <TextArea fx:id="txtLogArea" editable="false" layoutX="14.0" layoutY="78.0" prefHeight="287.0" prefWidth="698.0" wrapText="true" />
      <Button fx:id="btnLogOut" layoutX="617.0" layoutY="432.0" mnemonicParsing="false" onAction="#doLogOut" prefHeight="32.0" prefWidth="86.0" text="Exit" />
      <Button fx:id="btnShowLog" layoutX="451.0" layoutY="42.0" mnemonicParsing="false" onAction="#showLog" prefHeight="25.0" prefWidth="112.0" text="Show user's log" />
      <Button fx:id="btnStepBack" layoutX="518.0" layoutY="432.0" mnemonicParsing="false" onAction="#makeStepBack" prefHeight="32.0" prefWidth="86.0" text="Log Out" />
      <Button fx:id="btnUserChat" layoutX="363.0" layoutY="42.0" mnemonicParsing="false" onAction="#showUserChat" prefHeight="25.0" prefWidth="77.0" text="Chat" />
      <Button fx:id="btnChangeUserPass" layoutX="574.0" layoutY="42.0" mnemonicParsing="false" onAction="#makeChangePass" text="Change User Password" />
      <TextArea fx:id="txtMessageBody" layoutX="14.0" layoutY="374.0" onKeyReleased="#isMessageAreaEmpty" prefHeight="90.0" prefWidth="479.0" promptText="Message" />
      <TextField fx:id="txtMessageToUser" layoutX="507.0" layoutY="394.0" prefHeight="25.0" prefWidth="207.0" />
      <Label layoutX="507.0" layoutY="366.0" prefHeight="27.0" prefWidth="77.0" text="Send to:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Button fx:id="btnSendMessage" disable="true" layoutX="413.0" layoutY="473.0" mnemonicParsing="false" onAction="#sendNewMessage" prefHeight="25.0" prefWidth="77.0" text="Send" />
   </children>
</AnchorPane>
